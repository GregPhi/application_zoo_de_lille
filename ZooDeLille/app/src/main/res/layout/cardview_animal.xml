<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/animal_icon"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:contentDescription="@string/animal_picture"
        android:src="@drawable/drawable_animals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/animal_name"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/animal_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/animal_favorite"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:contentDescription="@string/set_fav_animal"
        android:src="@drawable/drawable_unfavorite"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>