<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hour_summer_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Heure semaine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hour_summer_weekend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Heure week-end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hour_summer_week" />

    <TextView
        android:id="@+id/hour_summer_close_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jour fermÃ©"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hour_summer_weekend" />
</androidx.constraintlayout.widget.ConstraintLayout>